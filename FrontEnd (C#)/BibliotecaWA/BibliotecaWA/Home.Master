                </div>

                <!-- Contenido principal -->
                <div class="p-4">
                    <asp:ContentPlaceHolder ID="cph_Contenido" runat="server"></asp:ContentPlaceHolder>
                </div>
            </div>
        </div>

        <script type="text/javascript">
            function toggleUserMenu() {
                var menu = document.getElementById('userMenu');
                if (menu.style.display === 'block') {
                    menu.style.display = 'none';
                } else {
                    menu.style.display = 'block';
                }
            }

            // Cerrar el menú si se hace clic fuera de él
            document.addEventListener('click', function (event) {
                var userCard = document.querySelector('.user-card');
                var userMenu = document.getElementById('userMenu');
                if (userMenu && userCard && !userCard.contains(event.target)) {
                    userMenu.style.display = 'none';
                }
            });

            // Evitar que el menú se cierre al hacer clic en él
            var userMenuElement = document.getElementById('userMenu');
            if (userMenuElement) {
                userMenuElement.addEventListener('click', function (event) {
                    event.stopPropagation();
                });
            }
        </script>
    </form>
